<div class="center-text"><h2>Sign up with twitter</h2></div>
<br/>
<div class="center-div">
	<%if notice%>
	<div class="notice center-text"><%=notice%></div>
	<%end%>
<%if session[:omniauth]%>
<%if session[:flag] == 1 %>
<%session[:flag] = nil%>
<%else%>
<%= devise_error_messages! %>

<%end%>

<div class="center-div span500">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div><h2 class="center-text">Email</h2>
   <div class="span500ip"><%= f.email_field :email %></div></div>

  <div><h2 class="center-text">Password</h2>
   <div class="span500ip"><%= f.password_field :password %></div></div>

  <div><h2 class="center-text">Password Confirmation</h2>
   <div class="span500ip"><%= f.password_field :password_confirmation %></div></div><br/>
<div class="center-text graytext">By clicking on sign up you agree to our <%=link_to "Privacy Policy", policy_path%> and terms of service.</div><br/>
  <div><%= f.submit "Sign up", :class => 'sub_button' %></div>
<% end %>
</div>
<%else%>
<% unless @authentications%>

<a href="/auth/twitter" class="auth_provider">
  <%= image_tag "twitter-bird-callout.png", :size => "140x114", :alt => "Twitter" %>

</a>
<%end%>

<%end%>
</div>